{
    "api_endpoints": {
        "system": {
            "GET /api/system/status": {
                "success_code": 200,
                "success_example": {
                    "systemStatus": "active",
                    "message": null,
                    "active_zone": 1,
                    "duration": 300
                },
                "errors": {
                    "500": {
                        "detail": [
                            "Failed to get system status, see logs for details"
                        ]
                    }
                }
            },
            "GET /api/system/last-sprinkler-run": {
                "success_code": 200,
                "success_example": {
                    "zone": 1,
                    "timestamp": 1706914800.123
                },
                "errors": {
                    "500": {
                        "detail": [
                            "Failed to get last zone run status, see logs for details"
                        ]
                    }
                }
            },
            "GET /api/system/last-schedule-run": {
                "success_code": 200,
                "success_example": {
                    "name": "Evening Schedule",
                    "timestamp": 1706914800.123,
                    "message": "success"
                },
                "errors": {
                    "500": {
                        "detail": [
                            "Failed to get last schedule run status, see logs for details"
                        ]
                    }
                }
            }
        },
        "sprinklers": {
            "GET /api/sprinklers": {
                "success_code": 200,
                "success_example": [
                    {
                        "zone": 1,
                        "name": "Front Lawn"
                    },
                    {
                        "zone": 2,
                        "name": "Back Lawn"
                    },
                    {
                        "zone": 3,
                        "name": "Garden"
                    }
                ],
                "errors": {
                    "500": {
                        "detail": [
                            "Failed to load sprinklers data, see logs for details"
                        ]
                    }
                }
            },
            "PUT /api/sprinklers": {
                "success_code": 200,
                "success_example": {
                    "message": "Success",
                    "zones": [
                        {
                            "zone": 1,
                            "name": "Front Lawn"
                        },
                        {
                            "zone": 2,
                            "name": "Back Lawn"
                        },
                        {
                            "zone": 3,
                            "name": "Garden"
                        }
                    ]
                },
                "errors": {
                    "400": {
                        "detail": [
                            "Failed to update sprinklers, invalid data: Duplicate zone numbers"
                        ]
                    },
                    "500": {
                        "detail": [
                            "Failed to update sprinklers, see logs for details"
                        ]
                    }
                }
            },
            "POST /api/sprinklers/start": {
                "success_code": 200,
                "success_example": {
                    "message": "Zone 1 started"
                },
                "errors": {
                    "400": {
                        "detail": [
                            "Zone 1 not found"
                        ]
                    },
                    "409": {
                        "detail": [
                            "Failed to start zone 2, system already active. Active zone: 1"
                        ]
                    },
                    "500": {
                        "detail": [
                            "Unexpected error starting sprinkler: see logs for details"
                        ]
                    },
                    "503": {
                        "detail": [
                            "Hardware communication error: Command Failed"
                        ]
                    }
                }
            },
            "POST /api/sprinklers/stop": {
                "success_code": 200,
                "success_example": {
                    "message": "System stopped"
                },
                "errors": {
                    "500": {
                        "detail": [
                            "Failed to stop system, see logs for details"
                        ]
                    }
                }
            }
        },
        "scheduler": {
            "GET /api/scheduler/schedules": {
                "success_code": 200,
                "success_example": [
                    {
                        "schedule_name": "Evening Schedule",
